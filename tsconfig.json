{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@THEME": ["./src/helpers/config/themeDefinitions.ts"],
      "@/components/*": ["./src/layouts/components/*"],
      "@/lib/*": ["./src/helpers/lib/*"],
      "@/utils/*": ["./src/helpers/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
