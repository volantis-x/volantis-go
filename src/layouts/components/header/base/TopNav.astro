---
import { TOP_NAV } from "@/content/header.config";
import { normalizeBehavior } from "@/lib/header";
import FixedTopNav from "./topnav/FixedTopNav.astro";
import StaticTopNav from "./topnav/StaticTopNav.astro";
import StickyTopNav from "./topnav/StickyTopNav.astro";

const behavior = normalizeBehavior(TOP_NAV.behavior);
---

{
  {
    fixed: <FixedTopNav />,
    static: <StaticTopNav />,
    sticky: <StickyTopNav />,
  }[behavior] || <StaticTopNav />
}
