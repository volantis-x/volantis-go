---
import { THEME } from "@THEME";
import { TOP_MARQUEE } from "@/content/header.config";
import BaseTopMarquee from "@/components/header/base/TopMarquee.astro";
import BaseTopNav from "@/components/header/base/TopNav.astro";
---

<header>

  {
    TOP_MARQUEE?.ENABLE && (
      <>
        {{
          base: <BaseTopMarquee />,
        }[THEME] || <BaseTopMarquee />}
      </>
    )
  }

  {
    {
      base: <BaseTopNav />,
    }[THEME] || <BaseTopNav />
  }

</header>
