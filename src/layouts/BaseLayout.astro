---
import { CONFIG } from "@/content/site.config";
import BaseHead from "@/layouts/BaseHead.astro";
import Header from "@/layouts/components/Header.astro";
import type { Frontmatter } from "@/types/page";

const {
  title = CONFIG.DEFAULT_TITLE,
  description = CONFIG.DEFAULT_DESCRIPTION,
  date,
  author = CONFIG.DEFAULT_AUTHOR,
  categories,
  tags,
  image,
  cover,
  pageType = "website",
}: Frontmatter = Astro.props;

const dir = CONFIG.DIR === "rtl" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={CONFIG.DEFAULT_LOCALE} dir={dir}>
  <head>
    <BaseHead
      title={title}
      description={description}
      author={author}
      image={image}
      cover={cover}
      pageType={pageType}
    />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
