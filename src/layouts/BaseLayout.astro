---
import { CONFIG } from "@/content/site.config";
import BaseHead from "@/layouts/BaseHead.astro";
import Header from "@/layouts/components/Header.astro";

type Props = {
  title?: string;
  description?: string;
  date?: string | Date | undefined;
  author?: string;
  categories?: string[];
  tags?: string[];
  draft?: boolean;
  image?: { src: string; alt?: string };
  cover?: { src: string; alt?: string };
  pageType?: "website" | "article" | "profile" | "product" | "blog";
};

const {
  title = CONFIG.DEFAULT_TITLE,
  description = CONFIG.DEFAULT_DESCRIPTION,
  date,
  author = CONFIG.DEFAULT_AUTHOR,
  categories,
  tags,
  image,
  cover,
  pageType = "website",
} = Astro.props;

const dir = CONFIG.DIR === "rtl" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={CONFIG.DEFAULT_LOCALE} dir={dir}>
  <head>
    <BaseHead
      title={title}
      description={description}
      author={author}
      image={image}
      cover={cover}
      pageType={pageType}
    />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
