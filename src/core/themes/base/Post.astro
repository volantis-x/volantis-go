---
import { render } from "astro:content";
import { __t, getLocalizedPath } from "@/core/i18n";

// 接收来自 pages 路由传递的 props
const { post, lang, collection } = Astro.props;

// 渲染 Markdown 内容
// 在没有内容时，Astro 的类型定义会导致 render 接收 never 类型，导致 TS 报错。
// 这个忽略只在编译检查时生效，不影响运行时。
// @ts-ignore
const { Content } = await render(post.original);

// 格式化日期
const formattedDate = post.data.date
  ? new Date(post.data.date).toLocaleDateString(lang, {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : "";

// 获取作者 (Schema 中允许为空，这里做运行时的 I18n 回退)
const displayAuthor = post.data.author || __t("ui.author", lang);
---

<article class="post-container">
  {/* --- 头部区域 --- */}
  <header class="post-header">
    {/* 面包屑导航: 回到该集合的首页 */}
    <div class="breadcrumbs">
      <a href={getLocalizedPath(collection, lang)} class="collection-link">
        {__t(`ui.collections.${collection}`, lang) || collection.toUpperCase()}
      </a>
    </div>

    <h1 class="post-title">{post.data.title}</h1>

    <div class="post-meta">
      {formattedDate && (
        <span class="meta-item">
          <span class="label">{__t("ui.date", lang)}:</span>
          <time datetime={new Date(post.data.date).toISOString()}>
            {formattedDate}
          </time>
        </span>
      )}

      {displayAuthor && (
        <span class="meta-item">
          <span class="label">{__t("ui.author", lang)}:</span>
          <span class="value">{displayAuthor}</span>
        </span>
      )}
    </div>

    {/* 封面图 */}
    {post.data.cover?.src && (
      <div class="post-cover">
        <img
          src={post.data.cover.src}
          alt={post.data.cover.alt || post.data.title}
        />
      </div>
    )}
  </header>

  {/* --- 正文区域 --- */}
  {/* typography 类用于接入排版样式库 (如 Tailwind Typography 或 自定义CSS) */}
  <div class="post-content typography">
    <Content />
  </div>

  {/* --- 底部区域 --- */}
  <footer class="post-footer">
    {/* Tags */}
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="tags-container">
        <span class="label">{__t("ui.tag", lang)}:</span>
        {post.data.tags.map((tag: string) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </footer>
</article>

<style>
  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .collection-link {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: bold;
    color: var(--primary-color, #3b82f6);
    text-decoration: none;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    color: #666;
    font-size: 0.9rem;
  }

  .post-cover {
    margin-top: 2rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .post-cover img {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-content {
    line-height: 1.8;
    font-size: 1.1rem;
    color: var(--text-main, #333);
  }

  /* 简单的 Markdown 样式兜底 */
  .post-content :global(h2) { margin-top: 2rem; font-size: 1.8rem; }
  .post-content :global(p) { margin-bottom: 1.5em; }
  .post-content :global(img) { max-width: 100%; border-radius: 8px; }
  .post-content :global(blockquote) {
    border-left: 4px solid var(--primary-color, blue);
    padding-left: 1rem;
    color: #666;
    font-style: italic;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color, #eee);
  }

  .tags-container {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .tag {
    background: #f3f4f6;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #555;
  }
</style>
