---
import Layout from "@/core/layouts/Layout.astro";
import { getDefaultLocale, __t } from "@/core/i18n";

const defaultLoc = getDefaultLocale();
const currentLang = defaultLoc.code;
const title = __t("ui.page404.title", currentLang) || "404 Not Found";
const desc = __t("ui.page404.description", currentLang) || "Page not found";
---

<Layout title={title} description={desc} lang={currentLang}>
  <div class="error-page">
    <h1>404</h1>
    <p>{desc}</p>
    <a href="/">{__t("ui.backToHome", currentLang) || "Back to Home"}</a>
  </div>
</Layout>

<style>
  .error-page {
    text-align: center;
    padding: 10vh 1rem;
  }
  h1 {
    font-size: 6rem;
    margin: 0;
    line-height: 1;
  }
</style>
